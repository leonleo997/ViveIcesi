<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FragActividad">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"

        android:orientation="vertical"
        tools:context=".view.fragments.FragmentoItems">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Deporte \n y Actividad FÃ­sica"
                android:textAlignment="center"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/icesilogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Nombre Actividad"
                android:textSize="30dp"
                android:textAlignment="center"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imagen_actividad"
                android:layout_width="320dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/tv_informacion_actividad"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificar"
                android:id="@+id/bt_pasar_calificar_actividad"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>